{
  "name": "mmc-mcp-bridge",
  "version": "2.0.0",
  "description": "Enterprise MCP Orchestration Platform - 24+ MCP Servers + Intelligent Agent",
  "author": "MyMind Ventures <hello@mymindventures.io>",
  "license": "PROPRIETARY",
  "scripts": {
    "dev": "next dev",
    "dev:host": "next dev -H 0.0.0.0",
    "build": "next build",
    "start": "next start -p $PORT",
    "type-check": "tsc --noEmit",
    "prebuild": "npm run type-check",
    "precommit": "npm run type-check && npm run build",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d --no-build",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml build && docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:dev:stop": "docker compose -f docker-compose.dev.yml stop",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev:restart": "docker compose -f docker-compose.dev.yml restart",
    "docker:build:all": "docker compose -f docker-compose.dev.yml build && docker compose -f docker-compose.e2e.yml build",
    "docker:push:all": "docker push mymindventures/mmc-mcp-bridge-devcontainer:latest && docker push mymindventures/mmc-mcp-bridge-app:latest && docker push mymindventures/mmc-mcp-bridge-e2e:latest",
    "dagger:pipeline": "dagger run ./.dagger/pipeline.ts",
    "dagger:build": "dagger build",
    "dagger:test": "dagger test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "@dagger.io/dagger": "^0.19.7",
    "@leonardsellem/n8n-mcp-server": "^0.1.8",
    "@linear/sdk": "^29.0.0",
    "@modelcontextprotocol/sdk": "^1.24.2",
    "@notionhq/client": "^2.2.15",
    "@octokit/rest": "^20.0.2",
    "@sentry/node": "^7.99.0",
    "@slack/web-api": "^6.11.2",
    "airtable": "^0.12.2",
    "axios": "^1.6.5",
    "better-sqlite3": "^9.3.0",
    "bullmq": "^5.1.5",
    "encoding": "^0.1.13",
    "googleapis": "^131.0.0",
    "ioredis": "^5.3.2",
    "mongodb": "^6.3.0",
    "next": "^15.1.0",
    "openai": "^4.24.1",
    "pg": "^8.11.3",
    "playwright": "^1.41.1",
    "puppeteer": "^24.32.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "simple-git": "^3.22.0",
    "stripe": "^14.14.0",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/pg": "^8.15.6",
    "@types/react": "19.2.7",
    "typescript": "5.9.3"
  }
}
