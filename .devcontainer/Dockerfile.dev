# MMC MCP Bridge Development App Container
# For local development with hot reload
# Docker Hub: mymindventures/mmc-mcp-bridge-app:2.0.0
FROM node:20-slim

LABEL maintainer="MyMind Ventures <hello@mymindventures.io>"
LABEL com.mmc.project="mmc-mcp-bridge"
LABEL com.mmc.component="app"
LABEL com.mmc.version="2.0.0"
LABEL com.mmc.name="MMC_MCP_Bridge_App"
LABEL com.mmc.description="MMC MCP Bridge Development Application Container - Next.js Dev Server"
LABEL com.mmc.image="mymindventures/mmc-mcp-bridge-app:2.0.0"
LABEL com.mmc.container="MMC_MCP_Bridge_App"
LABEL org.opencontainers.image.source="https://github.com/mymindventures/mmc-mcp-bridge"
LABEL org.opencontainers.image.title="MMC_MCP_Bridge_App"
LABEL org.opencontainers.image.version="2.0.0"

# Install wget for healthcheck and Doppler CLI
RUN apt-get update && apt-get install -y wget gnupg && rm -rf /var/lib/apt/lists/*

# Install Doppler CLI
RUN wget -q -O - https://cli.doppler.com/public/cli/gpg.DE2A7741A397C129.key | apt-key add - && \
    echo "deb https://cli.doppler.com/public/cli/deb/debian any-version main" | tee /etc/apt/sources.list.d/doppler-cli.list && \
    apt-get update && apt-get install -y doppler && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspaces/MMC_MCP_BRIDGE

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including dev) for development
RUN npm ci

# Copy source code
COPY --chown=node:node . .

# Expose port
EXPOSE 3000

# Set environment
ENV NODE_ENV=development
ENV PORT=3000
ENV NEXT_TELEMETRY_DISABLED=1

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3000/api/health || exit 1

# Run as non-root user
USER node

# Start development server
CMD ["npm", "run", "dev:host"]
